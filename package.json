{
  "name": "ats-platform",
  "version": "1.0.0",
  "description": "ATS Platform - Applicant Tracking System Monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "shared/*"
  ],
  "scripts": {
    "backend:dev": "npm run start:dev -w @ats/backend",
    "backend:build": "npm run build -w @ats/backend",
    "backend:start": "npm run start:prod -w @ats/backend",
    "backend:test": "npm run test -w @ats/backend",
    "frontend:dev": "npm run dev -w @ats/frontend",
    "frontend:build": "npm run build -w @ats/frontend",
    "frontend:preview": "npm run preview -w @ats/frontend",
    "frontend:test": "npm run test -w @ats/frontend",
    "dev": "npm run backend:dev & npm run frontend:dev",
    "build": "npm run backend:build && npm run frontend:build",
    "test": "npm run backend:test && npm run frontend:test",
    "lint": "npm run lint --workspaces --if-present",
    "format": "npm run format --workspaces --if-present"
  },
  "devDependencies": {
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
